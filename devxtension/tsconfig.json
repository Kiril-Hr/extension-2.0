{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",

    "sourceMap": true,
    "outDir": "./dist",

    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "declaration": true,
    "jsx": "react",
    "lib": ["DOM", "ES5", "ES6", "ESNext"],
    "types": ["react", "svelte", "vue"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
